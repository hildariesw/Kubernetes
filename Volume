apiVersion: v1
kind: ReplicaSet
metadata:
  name: volume1
spec:
  containers:
    - name: test
      image: testcontainers/helloworld 
      volumeMounts:
      - mouthPath: /cache
        name: cache-volume
  volumes:
    - name: cache-volume  //Direktori ini akan di mounting ke /cache
      emptyDir{}
  
  
  apiVersion: v1
kind: Pod
metadata:
  name: test-pd
spec:
  containers:
  - image: k8s.gcr.io/test-webserver
    name: test-container
    volumeMounts:
    - mountPath: /cache
      name: cache-volume
  volumes:
  - name: cache-volume
    emptyDir: {}

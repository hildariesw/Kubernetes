apiVersion: apps/v1
kind: ReplicaSet
metadata: 
  name: nginx
  labels:
    app: nginx
spec:
  replicas: 5
  selector:
    matchLabels:
      name: nginx
  template:
    metadata:
      name: nginx-app
      labels:
        name: nginx
    spec:
      controllers:
        - name: nginx
          image: nginx
          ports:
            - port: 80
            
            
---


apiVersion: v1
kind: Service
metadata:
  name: nginx-app
spec:
  type: LoadBalancer #Type LoadBalancer
  selector:
    name: nginx
  ports:
    - port: 80
      targetPort: 80

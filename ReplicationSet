apiVersion: apps/v1
kind: ReplicaSet
metadata:
  name: rs-nginx
  labels:
    version: 1.1
    environment: development
  annotations:
    description: aplikasi nginx untuk testing ajaa
    description2: Ah... lapo da Talachi matol lina labadi hochi Ah... La nochaaa
spec:
  replicas: 3 #jumlah Pod yg harus running
  selector: #untuk mengseleksi Pod
    matchLabels:
      app: nginx #harus sama dengan label template
    matchExpressions:
      - key: app #possible more than 1
        operator: In
        values:
          - nginx #possible more than 1
  template:
    metadata:
      name: pod-nginx #nama Pod, akan ada unik code dibelakang nama pod nya jika sudah dijalankan
      labels:
        app: nginx #harus sama dengan match expression/matchlabel
    spec:
      containers:
      - name: cr-nginx
        image: nginx
        ports:
        - containerPort: 80
        readinessProbe:
          httpGet:
            path: /health
            port: 80
          initialDelaySeconds: 0
          periodSeconds: 10
          failureThreshold: 3
          successThreshold: 1
          timeoutSeconds: 1
